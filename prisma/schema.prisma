generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

model Usuario {
  id          String        @id @default(uuid()) @db.VarChar(36)
  nome        String        @db.VarChar(60)
  email       String        @unique @db.VarChar(60)
  senha       String        @db.VarChar(60)
  tipo        TipoUsuario
  createdAt   DateTime      @default(now())
  updatedAt   DateTime      @updatedAt
  empresa     Empresa?      @relation(fields: [empresaId], references: [id])
  empresaId   String?       @db.VarChar(36)
  Notificacao Notificacao[]

  @@map("usuarios")
}

model Fornecedor {
  id        String    @id @default(uuid()) @db.VarChar(36)
  nome      String    @db.VarChar(60)
  cnpj      String    @unique @db.VarChar(14)
  telefone  String    @db.VarChar(15)
  email     String    @unique @db.VarChar(60)
  createdAt DateTime  @default(now())
  updatedAt DateTime  @updatedAt
  Produto   Produto[]

  @@map("fornecedores")
}

model Empresa {
  id        String    @id @default(uuid()) @db.VarChar(36)
  nome      String    @db.VarChar(60)
  email     String    @unique @db.VarChar(60)
  foto      String?   @db.VarChar(255)
  telefone  String?   @db.VarChar(15)
  endereco  String?   @db.VarChar(255)
  pais      String?   @db.VarChar(60)
  estado    String?   @db.VarChar(2)
  cidade    String?   @db.VarChar(60)
  cep       String?   @db.VarChar(10)
  usuario   Usuario[]
  createdAt DateTime  @default(now())
  updatedAt DateTime  @updatedAt

  @@map("empresas")
}

model Produto {
  id           String      @id @default(uuid()) @db.VarChar(36)
  nome         String      @db.VarChar(60)
  descricao    String      @db.VarChar(255)
  preco        Float
  quantidade   Int
  foto         String?     @db.VarChar(255)
  fornecedor   Fornecedor? @relation(fields: [fornecedorId], references: [id])
  fornecedorId String?     @db.VarChar(36)
  categoria    categoria?  @relation(fields: [categoriaId], references: [id])
  categoriaId  String?     @db.VarChar(36)
  createdAt    DateTime    @default(now())
  updatedAt    DateTime    @updatedAt

  @@map("produtos")
}

model categoria {
  id        String    @id @default(uuid()) @db.VarChar(36)
  nome      String    @db.VarChar(60)
  descricao String    @db.VarChar(255)
  produtos  Produto[]
  createdAt DateTime  @default(now())
  updatedAt DateTime  @updatedAt

  @@map("categorias")
}

model Notificacao {
  id        String   @id @default(uuid()) @db.VarChar(36)
  titulo    String   @db.VarChar(60)
  descricao String   @db.VarChar(255)
  lida      Boolean  @default(false)
  usuario   Usuario? @relation(fields: [usuarioId], references: [id])
  usuarioId String?  @db.VarChar(36)
  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt

  @@map("notificacoes")
}

enum TipoUsuario {
  ADMIN
  CLIENTE
  PROPRIETARIO
}
